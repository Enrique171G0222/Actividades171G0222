@model IEnumerable<Routing.Models.Pelicula>
@{
    Layout = "_Layout";
}

<div id="pelis">
    @foreach (var pelicula in Model)
    {
        <div>

            <a class="imgPelicula" href="~/@pelicula.Nombre.Replace(" ", "-")">
                <img src="~/images/portadas/@(pelicula.Id)_p.jpg">
            </a>
            <div class="nombrePelicula">
                <p>@pelicula.Nombre</p>
            </div>
        </div>
     }
</div>
